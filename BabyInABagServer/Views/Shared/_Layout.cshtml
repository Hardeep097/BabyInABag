<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Baby In A Bag</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Oswald' rel='stylesheet'>
    <link href="@Url.Content("~/Styles/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/slideshow.js"></script>
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/slideshow.js")
    @Scripts.Render("showSlides(slideIndex)")
</head>
<body style="padding-top: 130px">

    <!-- Navbar (sit on top) -->
    <div class="w3-top" style="background-color:gray;">
        <div class="w3-bar w3-white w3-wide w3-padding w3-card" style="min-width: 640px;">
            <div id="logo" style="float:left;  width: 158px; height: 120px;"><img src="~/images/logo.jpg" style="width: 158px; height: 120px;"></div>
            <h1 href="#home" class="w3-bar-item" id="header-text">Baby In A Bag</h1>

            <div id="navbar" style="width:100%; min-width: 752px; position:absolute; bottom:0;" align="center">

                <!-- Button Start -->

                <button class="w3-black w3-padding" style="margin-left: -11px">@Html.ActionLink("Home", "Index", "Home", null, new { style = "text-decoration:none;" })</button>

                <!-- Button End -->
                <!-- Button Start -->

                <button class="w3-black w3-padding" style="margin-left: -11px">@Html.ActionLink("Products", "Products", "Products", null, new { style = "text-decoration:none;" })</button>

                <!-- Button End -->
                <!-- Button Start -->

                <button class="w3-black w3-padding" style="margin-left: -11px">@Html.ActionLink("Sizing", "Sizing", "Home", null, new { style = "text-decoration:none;" })</button>

                <!-- Button End -->
                <!-- Button Start -->

                <button class="w3-black w3-padding" style="margin-left: -11px">@Html.ActionLink("FAQ", "FAQ", "Home", null, new { style = "text-decoration:none;" })</button>

                <!-- Button End -->
                <!-- Button Start -->

                <button class="w3-black w3-padding" style="margin-left: -11px">@Html.ActionLink("About Us", "About", "Home", null, new { style = "text-decoration:none;" })</button>

                <!-- Button End -->
                <!-- Button Start -->

                <button class="w3-black w3-padding" style="margin-left: -11px">@Html.ActionLink("Contact Us", "Contact", "Home", null, new { style = "text-decoration:none;" })</button>

                <!-- Button End -->

            </div>

            <div class="w3-right w3-hide-small" style="position:absolute;top:0;right:0;">
                @Html.ActionLink("Login", "Login", "Login", new object { }, new { @class = "w3-bar-item w3-button" })
                @Html.ActionLink("Cart", "Cart", "Cart", new object { }, new { @class = "w3-bar-item w3-button" })
            </div>

        </div>
    </div>
    <!-- Page content -->
    <div class="w3-content w3-padding" style="max-width:1564px">
        <div class="w3-container w3-padding-32">
            @RenderBody()
        </div>
        <!-- End page content -->
    </div>
    <!-- Footer -->
    <footer class="w3-center w3-black w3-padding-16">
        &copy; Copyright @DateTime.Now.Year SpectZero
    </footer>

    <script type="text/javascript">
        showSlides(slideIndex)
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

