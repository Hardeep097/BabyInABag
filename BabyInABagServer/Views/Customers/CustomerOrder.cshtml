@using BabyInABagServer.Models.VMs
@model CustomerOrder

@{
    ViewBag.Title = "EditCustomerOrder";
}

<h2>Customer Order Selection</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Order.Order_Id)
    <b>@Html.DisplayNameFor(model => model.Order.Order_Status)</b> @Html.DisplayFor(model => model.Order.Order_Status)

    <br /><br />
    <b>Update Products:</b><br />
    <table class="table">
        @for (int i = 0; i < Model.CustomerProducts.Count; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(model => model.CustomerProducts[i].Id)
                    @Html.EditorFor(model => model.CustomerProducts[i].isAdded)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CustomerProducts[i].ProductInfo)
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="Update Products in Order" />

}

@Html.ActionLink("Customer List", "Index")

